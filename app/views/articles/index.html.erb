<div class="container homepage">
  <h1>Articles</h1>

  <p>Our blog has <%= Article.public_count %> articles and counting!</p>

  <ul>
    <% @articles.each do |article| %>
      <% unless article.archived? %>
        <li>
          <%= link_to article.title, article %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
